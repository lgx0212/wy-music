/* pages/index/index.wxss */
.banners{
  width: 100%;
  height: 300rpx;
}
.banners image {
  width: 100%;
  height: 100%;
}

.nav-container{
  display: flex;
}
.nav-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.nav-item text {
  font-size: 26rpx;
}
.nav-item .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background-color: rgb(240, 19, 19);
  font-size: 50rpx;
  color: #fff;
  margin: 20rpx 0;
}

.recommend-container{
  padding: 20rpx;
}


.scroll-container{
  display: flex;
  padding-top: 20rpx;
  height: 300rpx;
}
.scroll-item {
  margin-right: 20rpx;
}
.scroll-item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scroll-item text{
  font-size: 26rpx;
  /* 单行文本溢出 */
  /* display: block;
  white-space: wrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  /* 多行文本溢出 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.top-list{
  padding: 20rpx;
}
.top-swiper{
  min-height: 440rpx;
}
.music-list{
  background-color: #fbfbfb;
}
.music-list .title{
  font-size: 30rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
}
.music-list image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.music-list .music-item{
  display: flex;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
}
.music-item .number,.music-name{
  height: 100rpx;
  line-height: 100rpx;
}
.music-item .music-name{
  max-width: 400rpx;
  display: block;
  white-space: wrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.music-item .number{
  width: 80rpx;
  text-align: center;
}